                }
            });
        };
        
        // Validate all phone number fields
        validatePhoneNumber('mobileNumber', 'mobileError');
        validatePhoneNumber('homeNumber', 'homeError');
        validatePhoneNumber('employerPhone', 'employerPhoneError');
        validatePhoneNumber('employerFax', 'faxError');
        
        // Form validation before submission
        document.getElementById('recruitmentForm').addEventListener('submit', function(e) {
            let valid = true;
            const requiredFields = document.querySelectorAll('[required]');
            
            // Check required fields
            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.style.borderColor = 'red';
                    valid = false;
                } else {
                    field.style.borderColor = '';
                }
            });
            
            // Check phone numbers
            const phoneInputs = document.querySelectorAll('input[type="tel"]');
            phoneInputs.forEach(input => {
                if (input.value && !/^\d{10}$/.test(input.value)) {
                    input.style.borderColor = 'red';
                    valid = false;
                }
            });
            
            if (!valid) {
                e.preventDefault();
                alert('Please fill in all required fields marked with * and ensure phone numbers are 10 digits');
            }
        });
    </script>
