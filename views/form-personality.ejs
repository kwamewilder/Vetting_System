<script>
  const radios = document.querySelectorAll('input[name="fatherAliveDeceased"]');
  const deathDetailsContainer = document.getElementById('fatherDeathDetailsContainer');
  const deathDetailsInput = document.getElementById('fatherDeathDetails');

  radios.forEach(radio => {
    radio.addEventListener('change', () => {
      if (radio.value === 'Deceased' && radio.checked) {
        deathDetailsContainer.style.display = 'block';
        deathDetailsInput.setAttribute('required', 'required');
      } else if (radio.value === 'Alive' && radio.checked) {
        deathDetailsContainer.style.display = 'none';
        deathDetailsInput.removeAttribute('required');
      }
    });
  });
</script>
